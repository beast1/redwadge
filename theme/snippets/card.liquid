<div class="
   card 
   {% unless product.available %}
     {% unless settings.product_not_available_hide %} 
       card--not-avialable 
     {% endunless %}
   {% endunless %}
 ">
  
  {% include 'card-status' %}
  
  <div class="card__preview">
    <div class="card__taste  card__taste--green-aple"></div>
    {% if product.images.size > 0 %}
      <a href="{{ product.url }}" title="{{ product.title | strip_html }}">
        <img src="{{ product.images.first.large_url }}" alt="{{ product.images.first.title | strip_html }}"
             title="{{ product.images.first.title | strip_html }}" width="100%">
      </a>
    {% else %}
      <a href="{{ product.url }}" title="{{ product.title | strip_html }}">
        <img src="{{ 'no_image.png' | asset_url }}" alt="{{ product.title | strip_html }}" title="{{ product.title | strip_html }}" width="100%">
      </a>
    {% endif %}
  </div>
  <span class="card__name">{{ product.title }}</span>
  <p class="card__disc">{{ product.short_description }}</p>
  <form class="card__controls" method="post" action="{{ cart_url }}" data-product-id="{{ product.id }}">
    <input type="hidden" name="variant_id" value="{{ product.variants.first.id }}">
    {% if product.available %}   
      {% include 'counter' %}
      <button class="card__target" type="submit" data-item-add>В корзину</button>
    {% else %}
      <a class="link  card__link" href="{{ product.url }}" title="{{ product.title }}">Нет в наличии</a>
    {% endif %}
  </form>
</div>