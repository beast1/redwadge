<script>

  Site.cart_url = '{{ cart_url }}';

  Site.product_status = '{{ settings.product_not_available }}';

  Site.product_not_available_hide = '{{ settings.product_not_available_hide }}';

  Site.template = '{{ template }}';

  Site.cards_crop_off = '{{ settings.cards_crop_off }}';

  Products.setConfig({
    filtered: false,
    decimal: {
      mmt: 0, // мм
      cmt: 0, // см
      dmt: 0, // дм
      mtr: 0, // м
      kmt: 0, // км
      mtk: 0, // м2
      dmk: 0, // дм2
      mlt: 0, // мл
      cmq: 0, // см3
      ltr: 0, // л
      dmq: 0, // дм3
      mtq: 0, // м3
      grm: 0, // г
      kgm: 3, // кг
      tne: 0, // т
      hur: 0, // ч
      nbb: 0, // боб
      lef: 1, // л.
      set: 0, // набор
      npr: 0, // пар
      npl: 0, // рул
      nmp: 0, // упак
      dzp: 0, // дюжина упак
      cnp: 0, // 100 упак
      pce: 0, // шт
      cen: 0, // 100 шт
      mil: 0, // тыс. шт
      box: 0, // ящ
      sct: 0, // секц
      btl: 0 // флак
    }
  });

  Site.messages = {
    "cartIsEmpty": "{{ messages.cart_is_empty }}",
    "productAddedToCart": "{{ messages.product_added_to_cart }}",
    "productRemovedFromCart": "{{ messages.product_removed_from_cart }}",
    "productAddedToComparison": "{{ messages.product_added_to_comparison }}",
    "productRemovedFromComparison": "{{ messages.product_removed_from_comparison }}",
    "maximumNumberOfComparable": "{{ messages.maximum_number_of_comparable }}",
    "comparisonIsEmpty": "{{ messages.comparison_is_empty }}",
    "imageNotUploaded": "{{ messages.image_not_uploaded }}",
    "labelArticle": "{{ messages.label_article }}",
    "button_close": "{{ messages.button_close }}",
    "button_submit": "{{ messages.button_submit }}"
  };

  Site.promoSlider = {
    autoPlay: {% unless settings.promo_slider_auto %}false{% else %}true{% endunless %},
    autoPlayTime: {% unless settings.promo_slider_auto_time %}0{% else %}{{ settings.promo_slider_auto_time }}{% endunless %}
  };
</script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="{{ 'theme.js' | asset_url }}"></script>

{% case template %}
  {% when 'index' %}
    <script src="{{ 'index.js' | asset_url }}"></script>
  {% when 'product' %}
    <script src="{{ 'product.js' | asset_url }}"></script>
  {% when 'product.reviews' %}
    <script src="{{ 'reviews.js' | asset_url }}"></script>
  {% when 'article' %}
    <script src="{{ 'article.js' | asset_url }}"></script>
  {% when 'collection' or 'search' %}
    <script src="{{ 'collection.js' | asset_url }}"></script>
  {% when 'cart' %}
    <script src="{{ 'cart.js' | asset_url }}"></script>
  {% when 'page.representatives' %}
    <script src="{{ 'representatives.js' | asset_url }}"></script>
    <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBlUWp4n4_zMYtLi-BJms_n_1uZbI_yLJo&v=3&callback=initMap">
    </script>
  {% when 'collection' or 'search' or 'product' %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/css/bootstrap-select.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.2/js/bootstrap-select.min.js"></script>
  {% when 'collection' or 'search' or 'product' or 'index' %}
    <script src="{{ 'jquery-ui-core.min.js' | asset_url }}"></script>
    <script src="{{ 'jquery-ui.min.js' | asset_url }}"></script>
    <script src="{{ 'card.js' | asset_url }}"></script>
{% endcase %}