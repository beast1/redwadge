        <p class="map__info-list  map__phones">
          <span class="map__info-label  map__phones-label">Тел.:</span>
        </p>
        <p class="map__info-list  map__emails">
          <span class="map__info-label  map__emails-label">E-mail:</span>
        </p>
        <p class="map__info-list  map__sites">
          <span class="map__info-label  map__sites-label">Сайт:</span>
          {% comment %}<a class="map__info-item  map__sites-item"></a>{% endcomment %}
        </p>
      </div>
    </div>
  </div>  
</div> 