{% if cart.items_count != 0 %}
  {% include 'page-title' %}
  <div class="page-main">
    <form class="basket" action="{{ cart_url }}" method="post" data-cart-form>
      <input type="hidden" name="_method" value="put">
      <input type="hidden" name="make_order" value="">
      <input type="hidden" name="lang" value="{{ language.locale }}"/>
      <span class="basket__counter">
        У Вас 
        {% if cart.items_count == 0 %}
          <span class="basket__counter-value">ни одного товара</span>
        {% else %}
          {% if cart.items_count == 1 %}
            <span class="basket__counter-value">{{ cart.items_count }} товар</span>
          {% else %}
            <span class="basket__counter-value">{{ cart.items_count }} товара</span>
          {% endif %}
        {% endif %}
         в корзине
      </span>
      <div class="table  basket__items">
        <div class="tr  basket__items-settings">
          <div class="td tc--preview  basket__settings-data"></div>
          <div class="td tc--name  basket__settings-data">Название</div>
          <div class="td tc--price  basket__settings-data">Цена</div>
          <div class="td tc--count  basket__settings-data">Колличество</div>
          <div class="td tc--common-price  basket__settings-data">Сумма</div>
          <div class="td tc--remove  basket__settings-data"></div>
        </div>
        {% for item in cart.items limit: 100 %}
          {% include 'basket-item' %}
        {% endfor %}
      </div>
      <div class="js-shopcart-area  basket__controls">
        <a class="back" href="{{ collections.wadge-250-gr.url }}" title="{{ collections.wadge-250-gr.title }}">
          <span class="back__btn">
            <i class="fa fa-angle-left" aria-hidden="true"></i>
          </span>
          Продолжить покупки
        </a>
        <div class="basket__targets">
          <a class="link  basket__sub-target" href="#">Купить в 1 клик</a>
          <button class="basket__target" type="submit" data-cart-submit>Оформить заявку</button>
        </div>
        <div class="basket__fieldset">
          <span class="basket__action-disc">Общая сумма:  </span>
          <span class="js-shopcart-total-summ  basket__final-price">{{ cart.items_price | money }}</span>
        </div>
      </div>
    </form>
  </div>
{% else %}
  {% include 'alert' %}
{% endif %}